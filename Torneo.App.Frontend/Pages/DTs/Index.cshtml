@page
@model Torneo.App.Frontend.Pages.DTs.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear director tecnico</a>

<h1>Listado de directores tecnicos</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var dt in Model.dts)
        {
            <tr>
                <th>@dt.Id</th>
                <td>@dt.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@dt.Id">
                    Detalle
                    </a>
                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@dt.Id">
                    Editar
                    </a>
                    <form method="post" class="d-inline">
                        <button asp-page-handler="Delete" asp-route-id="@dt.Id"
                        onclick="return confirm('Esta Seguro de eliminar el D.T.?')"class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>