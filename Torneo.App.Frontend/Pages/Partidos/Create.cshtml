@page
@model Torneo.App.Frontend.PagesPartidos.CreateModel
@{
}
<h1>Nuevo partido</h1>
<form method="post">
    <div class="form-group">
        <label for="partido.FechaHora">FechaHora</label>
        <input type="date" id="FechaHora" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="partido.Local"></label>
        <input asp-for="partido.Local" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="partido.MarcadorLocal"></label>
        <input asp-for="partido.MarcadorLocal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="partido.Visitante"></label>
        <input asp-for="partido.Visitante" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="partido.MarcadorVisitante"></label>
        <input asp-for="partido.MarcadorVisitante" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Crear partido</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>