@page
@model Torneo.App.Frontend.PagesEquipos.CreateModel
@{
}
<h1>Nueva equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select id="idMunicipio" name="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Id">@municipio.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="idDirectorTecnico">DirectorTecnico</label>
        <select id="idDirectorTecnico" name="idDirectorTecnico" class="form-control">
            @foreach (var directorTecnico in Model.directoresTecnicos)
            {
                <option value="@directorTecnico.Id">@directorTecnico.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Crear equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>