@page
@model Torneo.App.Frontend.Pages.Equipos.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear equipo</a>

<h1>Listado de equipos</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Municipio</th>
            <th scope="col">DT</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var equipo in Model.equipos)
        {
            <tr>
                <th>@equipo.Id</th>
                <td>@equipo.Nombre</td>
                <td>@equipo.Municipio.Nombre</td>
                <td>@equipo.DirectorTecnico.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@equipo.Id">
                    Detalle
                    </a>
                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@equipo.Id">
                    Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>